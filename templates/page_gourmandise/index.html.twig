{% extends 'base.html.twig' %}

{% block title %}Hello PageGourmandiseController!
{% endblock %}

{% block body %}
	{% block anim %}Gourmandises Test
	{% endblock %}
	<!-- Entête-->
	<div class="Entete">
		<div class="paraEnt">
			{% for gourmandise in gourmandises %}
				<h1>{{gourmandise.h1}}</h1>
				<h2>{{gourmandise.h2}}</h2>

			{% else %}
				<li>Aucun produit trouvé.</li>
			{% endfor %}

		</div>
		<div class="ImgEnt">
			{% for gourmandise in gourmandises %}
				<p>{{gourmandise.paragraphe}}</p>
				<div class="ImgL">{{gourmandise.img}}</div>
			{% endfor %}
			<!--<div class="ImgBC">
						                <div class="ImgB">img B</div>
						                <div class="ImgC">img C</div>
						            </div>-->
		</div>
	</div>
	<!---->


	<div class="BlocProduits">
		<h2>Un large choix de produits à personnaliser</h2>
		<div class="ProduitList">
			{% for Typeproduit in Typeproduits %}
				<div class="cardProd">
					<div class="ImgProduit" style="background-image: url('{{ asset('images/' ~ Typeproduit.illustration) }}');"></div>
					<div class="TitreProduit">{{ Typeproduit.libelle }}</div>
					<div class="DescripProduit">{{ Typeproduit.description }}</div>
					<div class="InfoProduit">
						<span class="Prx">{{ Typeproduit.prix }}<strong>
								€</strong>
						</span>
						<button class="voir">Voir</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
