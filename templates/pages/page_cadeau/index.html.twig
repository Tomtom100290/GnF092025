{% extends 'base.html.twig' %}

{% block title %}Cadeaux des invités{% endblock %}

{% block body %}
{% block anim %}Friandise Test{% endblock %}
<!-- Entête-->
    <div class="Entete">
        <div class="paraEnt">
             {% for cadeau in cadeaux %}
            <h1>{{cadeau.h1}}</h1>
            <h2>{{cadeau.h2}}</h2>
            
               {% else %}
            <li>Aucun produit trouvé.</li>
        {% endfor %}

        </div>
        <div class="ImgEnt">
            {% for cadeau in cadeaux %}
            <p>{{cadeau.paragraphe}}</p>
            <div class="ImgL">{{cadeau.img}}</div>
            {% endfor %}
            <!--<div class="ImgBC">
                <div class="ImgB">img B</div>
                <div class="ImgC">img C</div>
            </div>-->
        </div>
    </div>
<!---->


<div class="BlocProduits">
    <h2>Un large choix de produits à personnaliser</h2>
    <div class="ProduitList">
        {% for Typeproduit in Typeproduits %}
            <div class="cardProd">
                <div class="ImgProduit"><img src="{{ asset('images/' ~ Typeproduit.ImageFile) }}" alt="{{ Typeproduit.libelle }}"></div>
                <div class="TitreProduit">{{ Typeproduit.libelle }}</div>
                <div class="DescripProduit">{{ Typeproduit.description }}</div>
                <div class="InfoProduit">
                    <span class="Prx">{{ Typeproduit.prix }}<strong> €</strong></span>
                    <button class="voir">Voir</button>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% for Typeproduit in Typeproduits %}
<img src="{{ asset('images/' ~ Typeproduit.illustration) }}" alt="{{ Typeproduit.libelle }}">
{% endfor %}
{% for Typeproduit in Typeproduits %}
    {# Debug : afficher le nom du fichier #}
    <p>Fichier : {{ Typeproduit.illustration }}</p>
    <p>Chemin complet : {{ asset('images/' ~ Typeproduit.illustration) }}</p>
    
    <img src="{{ asset('images/' ~ Typeproduit.illustration) }}" 
         alt="{{ Typeproduit.libelle }}"
         onerror="this.style.border='2px solid red'">
{% endfor %}
{% for Typeproduit in Typeproduits %}
    {% if Typeproduit.illustration %}
        <img src="{{ asset('images/' ~ Typeproduit.illustration) }}" 
             alt="{{ Typeproduit.libelle }}">
    {% else %}
        <img src="{{ asset('images/placeholder.jpg') }}" 
             alt="{{ Typeproduit.libelle }}"
             title="Pas d'image">
        {# Ou simplement #}
        <p>Aucune image disponible</p>
    {% endif %}
{% endfor %}
{% endblock %}
