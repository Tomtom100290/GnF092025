            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(221, 166, 200, 0.3);
            margin: 10px;
        }

        .btn-home:hover {
            background: #c87ba8;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(221, 166, 200, 0.4);
        }

        .btn-secondary {
            display: inline-block;
            padding: 15px 40px;
            background: transparent;
            color: #dda6c8;
            text-decoration: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            border: 2px solid #dda6c8;
            margin: 10px;
        }

        .btn-secondary:hover {
            background: #dda6c8;
            color: white;
        }

        @media (max-width: 768px) {
            .error-code {
                font-size: 5rem;
            }

            .error-title {
                font-size: 1.8rem;
            }

            .error-message {
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}

