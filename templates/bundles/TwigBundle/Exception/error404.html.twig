            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(221, 166, 200, 0.3);
        }

        .btn-home:hover {
            background: #c87ba8;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(221, 166, 200, 0.4);
        }

        .suggestions {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 2px dashed #dda6c8;
        }

        .suggestions h3 {
            color: #c87ba8;
            font-size: 1.3rem;
            margin-bottom: 15px;
        }

        .suggestions ul {
            list-style: none;
            padding: 0;
        }

        .suggestions li {
            margin: 10px 0;
        }

        .suggestions a {
            color: #dda6c8;
            text-decoration: none;
            font-size: 1.1rem;
            transition: color 0.3s;
        }

        .suggestions a:hover {
            color: #c87ba8;
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .error-code {
                font-size: 5rem;
            }

            .error-title {
                font-size: 1.8rem;
            }

            .error-message {
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}

